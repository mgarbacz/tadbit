<form id="card-add" class="form-horizontal col-md-8 col-sm-12" role="form">
  <div class="form-group">
    <label for="input-question" class="col-sm-2 control-label">Question</label>
    <div class="col-sm-10">
      <textarea id="input-question" class="form-control"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="input-answer" class="col-sm-2 control-label">Answer</label>
    <div class="col-sm-10">
      <textarea id="input-answer" class="form-control"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="input-tags" class="col-sm-2 control-label">Tags</label>
    <div class="col-sm-10">
      <input id="input-tags" class="form-control" type="text" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="add-submit" type="button" class="btn btn-primary col-xs-6">
        Submit
      </button>
      <button id="add-reset" type="reset" class="btn btn-default col-xs-6">
        Reset
      </button>
    </div>
  </div>
</form>
<div class="col-md-4 col-sm-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        <span class="glyphicon glyphicon-info-sign"></span>
        Adding a new Card
      </h3>

    </div>
    <div class="panel-body">
      <p class="text-info">
        Fill out this web form in order to create a new Card.
      </p>
    </div>
  </div>
</div>
